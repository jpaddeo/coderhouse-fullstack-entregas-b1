<div class='flex flex-col justify-center'>
  <hr />
  <div class='flex flex-col items-center justify-center my-6'>
    <h2 class='text-xl'>Crear Producto</h2>
    <form class='flex flex-col gap-4 w-full max-w-xl'>
      <div class='grid w-full gap-2'>
        <label for='title'>Título</label>
        <input
          class='pl-1 border-2 rounded-md'
          name='title'
          id='title'
          type='text'
        />
      </div>
      <div class='grid w-full gap-2'>
        <label for='description'>Descripción</label>
        <textarea
          class='pl-1 border-2 rounded-md flex-1'
          name='description'
          id='description'
          rows='4'
        ></textarea>
      </div>
      <div class='grid w-full gap-2'>
        <label for='code'>Código</label>
        <input
          class='pl-1 border-2 rounded-md flex-1'
          name='code'
          id='code'
          type='text'
        />
      </div>
      <div class='grid w-full gap-2'>
        <label for='price'>Precio</label>
        <input
          class='pl-1 border-2 rounded-md flex-1'
          name='price'
          id='price'
          type='number'
        />
      </div>
      <div class='grid w-full gap-2'>
        <label for='stock'>Stock</label>
        <input
          class='pl-1 border-2 rounded-md flex-1'
          name='stock'
          id='stock'
          type='number'
        />
      </div>
      <div class='grid w-full gap-2'>
        <label for='categories'>Categoria</label>
        <input
          class='pl-1 border-2 rounded-md flex-1'
          name='categories'
          id='categories'
          type='text'
        />
      </div>
      <button
        id='button-create'
        onclick='createProduct(event)'
        class='bg-green-400 hover:cursor-pointer hover:bg-green-600 px-2 py-1 rounded-md'
      >Crear</button>
    </form>
  </div>
  <h1 class='text-2xl'>Productos</h1>
  <hr />
  <div class='products-box'>
    {{#each products}}
      <hr />
      <div class='product-card'>
        <h3>{{this.title}}</h3>

        <p>Categoria: {{this.categories}}</p>
        <p>Descripción: {{this.description}}</p>
        <p>Precio: $ {{this.price}}</p>
        <button
          id='button-delete'
          onclick="deleteProduct('{{this._id}}')"
        >Eliminar</button>
      </div>
      <hr />
    {{/each}}
  </div>
</div>
<script type='text/javascript' src='/socket.io/socket.io.js'></script>
<script type='text/javascript' src='/js/products/rt.js'></script>
